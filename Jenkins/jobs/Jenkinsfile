import groovy.json.JsonSlurperClassic

def jsonParse(def json){
    new groovy.json.JsonSlurperClassic().parseText(json)
}

pipeline {
    agent any   // ✅ Ahora se ejecutará en cualquier nodo disponible
    environment {
        appName = "variable" 
    }
    stages
    {
        stage ("Paso1 "){
            steps {
                script {
                    sh "echo 'Hola Mundo'"
                }
            }
        }
    }
    post {
        always {
            deleteDir()
            sh "echo 'Fase Always'"
        }
        success {
            sh "echo 'fase success'"
        }
        failure {
            sh "echo 'Fase Failure'"
        }
    }
}